{
  "name": "@0x-jerry/load-pkg",
  "version": "0.0.1",
  "description": "Detect the closest `package.json` recursively.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "release": "x-release"
  },
  "license": "MIT",
  "author": "0x-jerry <x.jerry.wang@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x-jerry/load-pkg.git"
  },
  "bugs": {
    "url": "https://github.com/0x-jerry/load-pkg/issues"
  },
  "homepage": "https://github.com/0x-jerry/load-pkg#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@0x-jerry/x-release": "^0.3.2",
    "@types/node": "^17.0.25",
    "c8": "^7.11.2",
    "tsup": "^5.12.6",
    "typescript": "^4.6.3",
    "vitest": "^0.9.4"
  }
}
